{
    "mode": "All",
    "policyName": "Prod-SqlServer-Naming",
    "policyDisplayName": "Prod Sql Server name convention",
    "policyDescription": "Enforce production naming convention for Sql Servers",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Sql/servers"
          },
          {
            "not": {
              "anyOf": [
                {
                  "field": "name",
                  "like": "sqlsrv-prd-*"
                }
              ]
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    },
    "parameters": {}
  }