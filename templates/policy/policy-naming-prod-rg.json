{
  "mode": "All",
  "policyName": "Prod-RG-Naming",
  "policyDisplayName": "Prod resource group name convention",
  "policyDescription": "Enforce production naming convention for resource groups",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "not": {
            "anyOf": [
              {
                "field": "name",
                "like": "rg-prod-*"
              },
              {
                "field": "name",
                "equals": "NetworkWatcherRG"
              },
              {
                "field": "name",
                "like": "site-recovery-vault-rg*"
              },
              {
                "field": "name",
                "like": "*-asr"
              },
              {
                "field": "name",
                "like": "AzureBackupRG_*"
              },
              {
                "field": "name",
                "like": "DefaultResourceGroup-*"
              },
              {
                "field": "name",
                "like": "databricks-rg-*"
              },
              {
                "field": "name",
                "like": "synapseworkspace-managedrg-*"
              },
              {
                "field": "name",
                "like": "IT_*"
              }
            ]
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {}
}